@{
    ViewData["Title"] = "Proyecto Listado";
}

@model NetCoreApp2.Models.ProyectoViewModel;


<div class="content-wrapper">
    <div class="content">
        <div class="panel panel-default">
            <div class="panel-heading heading-primary">
                <button type="submit" class="btn btn-base crear" onclick="Crear()">
                    <span class="fa span-button"></span>
                    <p class="text-button-primary">Crear</p>
                </button>
            </div>
            <div class="panel-body">
                <section class="content">
                    <table>
                        <tr>
                            <th>id</th>
                            <th>Firstname</th>
                            <th>Lastname</th>
                        </tr>
                        @foreach (Entities.Proyecto eProyecto in Model.eListaProyecto)
                        {
                            <tr>
                                <td> @eProyecto.ProyectoId  </td>
                                <td> @eProyecto.Nombre  </td>
                                <td>@eProyecto.Descripcion  </td>
                                <td>  <a href='@Url.Action("Crear","Proyecto", new { Id= eProyecto.ProyectoId})'> text </a> </td>
                            </tr>
                        }
                    </table>
                </section>
                <!--  -------------------- PASO DE PARAMETRO POST ----------------- -->
                <form id="formPasoParametro" action='@Url.Action("Crear", "Proyecto")' method="POST">
                    <input type="hidden" id="usuarioId" name="usuarioId" value="0">
                </form>
            </div>
        </div>
    </div>
</div>




